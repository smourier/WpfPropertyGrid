<UserControl
    x:Class="WpfPropertyGrid.Utilities.ColorPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pg="clr-namespace:WpfPropertyGrid"
    xmlns:pgu="clr-namespace:WpfPropertyGrid.Utilities"
    mc:Ignorable="d">
    <Grid
        Margin="2"
        TextBlock.FontFamily="Consolas"
        TextBlock.FontSize="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="256" />
            <RowDefinition Height="36" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="256" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="16" />
            </Grid.ColumnDefinitions>
            <Image
                x:Name="ValueSaturation"
                Width="256"
                Height="256"
                MouseDown="OnValueSaturationMouseDown"
                MouseMove="OnValueSaturationMouseMove"
                MouseUp="OnValueSaturationMouseUp" />
            <Canvas
                x:Name="ValueSaturationCanvas"
                Width="256"
                Height="256">
                <Path
                    x:Name="ValueSaturationHandle"
                    Fill="Black"
                    IsHitTestVisible="False">
                    <Path.Data>
                        <CombinedGeometry GeometryCombineMode="Exclude">
                            <CombinedGeometry.Geometry1>
                                <EllipseGeometry RadiusX="6" RadiusY="6" />
                            </CombinedGeometry.Geometry1>
                            <CombinedGeometry.Geometry2>
                                <EllipseGeometry RadiusX="3" RadiusY="3" />
                            </CombinedGeometry.Geometry2>
                        </CombinedGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
            <Image
                x:Name="Hue"
                Grid.Column="2"
                Width="16"
                Height="256"
                MouseDown="OnHueMouseDown"
                MouseMove="OnHueMouseMove"
                MouseUp="OnHueMouseUp" />
            <Canvas
                x:Name="HueCanvas"
                Grid.Column="2"
                Width="16"
                Height="256">
                <StackPanel
                    x:Name="HueHandle"
                    IsHitTestVisible="False"
                    Orientation="Horizontal">
                    <Polygon
                        Fill="DimGray"
                        Points="0,-2 4,0, 0,2"
                        SnapsToDevicePixels="True"
                        Stroke="Black"
                        StrokeThickness="0.5" />
                    <Polygon
                        Fill="DimGray"
                        Points="12,-2 8,0, 12,2"
                        SnapsToDevicePixels="True"
                        Stroke="Black"
                        StrokeThickness="0.5" />
                </StackPanel>
            </Canvas>
            <Rectangle Grid.Column="4">
                <Rectangle.Fill>
                    <DrawingBrush
                        TileMode="Tile"
                        Viewport="0,0,16,16"
                        ViewportUnits="Absolute">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing Brush="Gray" Geometry="M0,0 H1 V1 H2 V2 H1 V1 H0Z" />
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle
                x:Name="Alpha"
                Grid.Column="4"
                Width="16"
                Height="256"
                Fill="Red"
                MouseDown="OnAlphaMouseDown"
                MouseMove="OnAlphaMouseMove"
                MouseUp="OnAlphaMouseUp">
                <Rectangle.OpacityMask>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Offset="0" Color="Black" />
                            <GradientStop Offset="1" Color="Transparent" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Rectangle.OpacityMask>
            </Rectangle>
            <Canvas
                x:Name="AlphaCanvas"
                Grid.Column="4"
                Width="16"
                Height="256">
                <StackPanel
                    x:Name="AlphaHandle"
                    IsHitTestVisible="False"
                    Orientation="Horizontal">
                    <Polygon
                        Fill="DimGray"
                        Points="0,-2 4,0, 0,2"
                        SnapsToDevicePixels="True"
                        Stroke="Black"
                        StrokeThickness="0.5" />
                    <Polygon
                        Fill="DimGray"
                        Points="12,-2 8,0, 12,2"
                        SnapsToDevicePixels="True"
                        Stroke="Black"
                        StrokeThickness="0.5" />
                </StackPanel>
            </Canvas>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2" />
                <RowDefinition Height="16" />
                <RowDefinition Height="2" />
                <RowDefinition Height="16" />
                <RowDefinition Height="2" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="14" />
                <ColumnDefinition />
                <ColumnDefinition Width="14" />
                <ColumnDefinition />
                <ColumnDefinition Width="14" />
                <ColumnDefinition />
                <ColumnDefinition Width="14" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="1"
                Margin="2,0,0,0"
                VerticalAlignment="Center">
                R:
            </TextBlock>
            <pgu:ByteTextBox
                x:Name="Argb_R"
                Grid.Row="1"
                Grid.Column="1"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                TextChanged="OnRedChanged" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                Margin="2,0,0,0"
                VerticalAlignment="Center">
                G:
            </TextBlock>
            <pgu:ByteTextBox
                x:Name="Argb_G"
                Grid.Row="1"
                Grid.Column="3"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                TextChanged="OnGreenChanged" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="4"
                Margin="2,0,0,0"
                VerticalAlignment="Center">
                B:
            </TextBlock>
            <pgu:ByteTextBox
                x:Name="Argb_B"
                Grid.Row="1"
                Grid.Column="5"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                TextChanged="OnBlueChanged" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="6"
                Margin="2,0,0,0"
                VerticalAlignment="Center">
                A:
            </TextBlock>
            <pgu:ByteTextBox
                x:Name="Argb_A"
                Grid.Row="1"
                Grid.Column="7"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                TextChanged="OnAlphaChanged" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Margin="2,0,0,0"
                VerticalAlignment="Center">
                H:
            </TextBlock>
            <pgu:SingleTextBox
                x:Name="Hsv_H"
                Grid.Row="3"
                Grid.Column="1"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                TextChanged="OnHueChanged" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="2"
                Margin="2,0,0,0"
                VerticalAlignment="Center">
                S:
            </TextBlock>
            <pgu:SingleTextBox
                x:Name="Hsv_S"
                Grid.Row="3"
                Grid.Column="3"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                TextChanged="OnSaturationChanged" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="4"
                Margin="2,0,0,0"
                VerticalAlignment="Center">
                V:
            </TextBlock>
            <pgu:SingleTextBox
                x:Name="Hsv_V"
                Grid.Row="3"
                Grid.Column="5"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                TextChanged="OnValueChanged" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="6"
                Margin="2,0,0,0"
                VerticalAlignment="Center">
                x:
            </TextBlock>
            <pgu:ColorTextBox
                x:Name="Hex"
                Grid.Row="3"
                Grid.Column="7"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                TextChanged="OnHexChanged" />
        </Grid>
    </Grid>
</UserControl>
