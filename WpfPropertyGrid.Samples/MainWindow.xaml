<Window
    x:Class="WpfPropertyGrid.Samples.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pg="clr-namespace:WpfPropertyGrid;assembly=WpfPropertyGrid"
    xmlns:samples="clr-namespace:WpfPropertyGrid.Samples"
    Title="WPF Property Grid"
    Width="700"
    Height="900"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Resources>
            <samples:Customer x:Key="Customer" />
        </Grid.Resources>
        <pg:PropertyGrid x:Name="MyGrid" SelectedObject="{StaticResource Customer}" />
    </Grid>
</Window>
