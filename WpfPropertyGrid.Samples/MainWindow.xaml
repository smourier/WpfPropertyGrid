<Window
    x:Class="WpfPropertyGrid.Samples.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pg="clr-namespace:WpfPropertyGrid;assembly=WpfPropertyGrid"
    xmlns:samples="clr-namespace:WpfPropertyGrid.Samples"
    Title="MainWindow"
    Width="608"
    Height="638">
    <Grid>
        <Grid.Resources>
            <samples:Customer x:Key="Customer" />
        </Grid.Resources>
        <pg:PropertyGrid Name="MyGrid" SelectedObject="{StaticResource Customer}" />
    </Grid>
</Window>
