<Window
    x:Class="WpfPropertyGrid.Samples.AddressListEditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pg="clr-namespace:WpfPropertyGrid;assembly=WpfPropertyGrid"
    Title="Address List Editor"
    Width="300"
    Height="300">
    <Window.CommandBindings>
        <CommandBinding
            CanExecute="OnEditorWindowCloseCanExecute"
            Command="Close"
            Executed="OnEditorWindowCloseExecuted" />
        <CommandBinding
            CanExecute="NewCommandBinding_OnCanExecute"
            Command="New"
            Executed="NewCommandBinding_OnExecuted" />
        <CommandBinding
            CanExecute="DeleteCommandBinding_OnCanExecute"
            Command="Delete"
            Executed="DeleteCommandBinding_OnExecuted" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="Close" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ListView
                    Name="EditorSelector"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding Value}"
                    SelectedIndex="0"
                    SelectionMode="Single" />

                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Command="New">
                    Add
                </Button>
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Command="Delete">
                    Remove
                </Button>
            </Grid>

            <GridSplitter
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                ShowsPreview="True" />
            <pg:PropertyGrid Grid.Column="2" SelectedObject="{Binding ElementName=EditorSelector, Path=SelectedItem}" />
        </Grid>
        <Button
            Grid.Row="1"
            Width="100"
            Margin="5,5,5,5"
            HorizontalAlignment="Right"
            Command="Close"
            Content="Close" />
    </Grid>
</Window>
